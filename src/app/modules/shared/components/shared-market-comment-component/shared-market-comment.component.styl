/* === Horizontals bars === */

.horizontal-bar {
  position: relative;
  border: 1px solid #D6D6D6;
  width: 100%;
  height: 38px;
  margin-bottom: 13px;

  &.number1 .bar-number {
    background: #C0210F;
  }

  &.number2 .bar-number {
    background: #FEBE34;
  }

  &.number3 .bar-number {
    background: #82CD30;
  }

  &.number4 .bar-number {
    background: #34AC01;
  }

  .bar-number {
    background: grey;
    width: 38px;
    height: 38px;
    color: white;
    text-align: center;
    font-weight: bold;
    font-size: 16px;
    float: left;
    padding-top: 7px;
  }

  .bar-fill {
    background-image: linear-gradient(-90deg, #edeeef 16%, #d7dee0 100%);
    height: 38px;
  }

  .bar-name {
    position: absolute;
    top: 7px;
    left: 50px;
    font-size: 15px;
    font-weight: 600;
    color: #3F3F3F;
  }

  .bar-stats {
    position: absolute;
    top: 7px;
    right: 12px;
    font-weight: 600;
    font-size: 19px;
    color: #F79323;
  }
}

/* === Pour les Bars qui n'ont pas de chiffres au d√©but === */

#key-benefits .horizontal-bar .bar-name {
  left: 20px;
}

#expression-of-interest .horizontal-bar .bar-name {
  left: 20px;
}

.average {
  font-size: 22px;
  color: #9B9B9B;
  margin-top: 0;
  margin-bottom: 30px;
}
