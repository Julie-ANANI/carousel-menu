  }

}


/* =========================================================================
Score total
========================================================================== */

#scores {

  h2 {
    background-image: url('/images/infographics/picto-graph.svg');
    margin-bottom: 50px;
  }

  .logo-synapse {
    margin-top: 110px;
  }

  .bar {
    display: inline-block;
    margin-right: 22px;
  }

  .bar .bg {
    position: relative;
    width: 28px;
    height: 300px;
    background: rgba(0,0,0,0.1);
    border-radius: 40px;
  }

  .bar .bg > div {
    position: absolute;
    bottom: 0;
    border-radius: 40px;
    padding: 5px 0 10px 0;
    width: 28px;
    height: 70px;
    transition: all linear 0.2s;
  }

  .bar .bg .score1 {
    background-image: linear-gradient(-180deg, #CE392D 0%, #B0261B 100%);
  }

  .bar .bg .score2 {
    background-image: linear-gradient(-180deg, #D75A3E 0%, #C14023 100%);
  }

  .bar .bg .score3 {
    background-image: linear-gradient(-180deg, #E68034 0%, #CA681E 100%);
  }

  .bar .bg .score4 {
    background-image: linear-gradient(-180deg, #F4B11B 0%, #C18601 100%);
  }

  .bar .bg .score5 {
    background-image: linear-gradient(-180deg, #EFD622 0%, #CBB515 100%);
  }

  .bar .bg .score6 {
    background-image: linear-gradient(-180deg, #D6D556 0%, #B9B837 98%);
  }

  .bar .bg .score7 {
    background-image: linear-gradient(-180deg, #CBDD51 0%, #99AA24 100%);
  }

  .bar .bg .score8 {
    background-image: linear-gradient(-180deg, #A8CD4C 0%, #799C24 100%);
  }

  .bar .bg .score9 {
    background-image: linear-gradient(-180deg, #95C84F 0%, #659C19 100%);
  }

  .bar .bg .score10 {
    background-image: linear-gradient(-180deg, #9ADA43 2%, #64971C 100%);
  }

  .bar .score {
    font-size: 12px;
  }

  .bar .bg strong {
    color: white;
    display: block;
    font-size: 16px;
  }

  .big-score {
    text-align: center;
    font-size: 120px;
    margin: 80px auto 70px auto;
    font-weight: 300;
  }
}

}




