  }

  article {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
  }

  article > div {
    display: flex;
    align-items: center;
    background: #032338;
    border-radius: 7px;
    padding: 20px 22px 25px 22px;
    width: 200px;
    min-height: 143px;
    font-size: 16px;
    margin: 0 10px 30px 10px;

    i {
      display: block;
      font-size: 30px;
      color: #FDD47B;
      margin-bottom: 5px;
    }

    > div {
      margin: 0 auto;
    }
  }
}


