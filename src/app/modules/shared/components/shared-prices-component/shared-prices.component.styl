Pour résumer
========================================================================== */

#qualities {

  h2 {
    background-image: url('/images/infographics/picto-cog.svg');
  }

  .progress-wrapper {
    position: relative;
    margin: 20px auto 10px auto;
    font-size: 25px;
    width: 170px;
  }

  .progresscircle {
    position: absolute;
