/* =========================================================================
Les concurrents
========================================================================== */

#competitors {

  h2 {
    background-image: url('/images/infographics/picto-bell.svg');
  }

  .competitors-intensity {
    p {
      font-size: 18px;
    }

    .help {
      display: inline-block;
    }

    .help:after {
      content: '?';
      font-weight: bold;
      display: block;
      margin-left: 5px;
      height: 19px;
      width: 19px;
      color: black;
      line-height: 20px;
      background-color: rgba(255,255, 255,0.8);
      border-radius: 31px;
      cursor: pointer;
      text-align: center;
      font-size: 12px;
    }

    .progressbar {
      background: #FFF;
      background: linear-gradient(#FFF, #DDD);
      height: 20px;
      border-radius: 15px;
      margin-bottom: 100px;

      .full {
        width:40%;
        height: 100%;
        border-radius: 15px;
        position: relative;
        padding-left: 30px;
        background: #ca681e;
        background: linear-gradient(#e68034, #ca681e);

        .value {
          background-color: #ca681e;
          position: absolute;
          top: 35px;
          right: -58px;
          padding: 8px;
          border-radius: 4px;
          font-size: 17px;
          width: 120px;
          text-align: center;

          &:before { // arrow
            content: '';
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 8px 10px 8px;
            border-color: transparent transparent #ca681e transparent;
            position: absolute;
            margin-left: auto;
            margin-right: auto;
            left: 0;
            right: 0;
            top: -10px;
          }
        }


        &.low {
          background: #799c24;
          background: linear-gradient(#a8cd4c, #799c24);

          .value {
            background-color: #799c24;
            &:before {
              border-color: transparent transparent #799c24 transparent;
            }
          }
        }

        &.high {
          background: #C12E29;
          background: linear-gradient(#c14e46, #C12E29);

          .value {
            background-color: #C12E29;
            &:before {
              border-color: transparent transparent #C12E29 transparent;
            }
          }
        }
      }
    }

    .progress {
      border-radius: 500px;
      height: 25px;
    }

    .progress-bar-danger {
      background: #C12E29;
      border-radius: 500px;
    }

    .progress-bar-danger span {
      margin-top: 2px;
      position: absolute;
    }
  }
}


/* =========================================================================
Les prix
========================================================================== */

#prices {

  h2 {
    background-image: url('/images/infographics/picto-money.svg');
  }

  svg {
    margin: 40px 0;
    width: 100%;
    height: auto;
  }

  .axis path,
  .axis line {
    fill: none;
    stroke: white;
  }

  .x.axis {
    fill: white;
  }

  .tick text {
    opacity: 0.5;
  }

  .big-price {
    display: inline-block;
    background: rgba(3,35,56,0.7);
    border-radius: 6px;
    padding: 30px 25px 5px 25px;
  }

  .big-price img {
    top: -13px;
    position: relative;
  }

  .big-price .price {
    font-size: 55px;
    color: white;
  }

  .big-price .devise {
    font-size: 55px;
    color: #4D89AE;
    opacity: 0.6;
  }
}


/* =========================================================================
Les commentaires
========================================================================== */

.list-comments {
  h2 {
    background-image: url('/images/infographics/picto-bulls.svg');
  }

  article {
    margin-bottom: 20px;
  }

  .positive img,
  .negative img {
    border-radius: 500px;
    margin-top: 7px;
    height: 45px;
  }

  .positive .comment,
  .negative .comment {
    position: relative;
    background: #032338;
    border-radius: 5px;
    font-size: 14px;
    padding: 10px 16px;
  }

  .negative .comment {
    background: #D9534F;
  }

  .positive .comment:after {
    position: absolute;
    left: -10px;
    top: 24px;
    content:'';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 6px 10.4px 6px 0;
    border-color: transparent #032338 transparent transparent;
  }

  .negative .comment:after {
    position: absolute;
    right: -10px;
    top: 24px;
    content:'';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 6px 0 6px 10.4px;
    border-color: transparent transparent transparent #D9534F;
  }

  .positive .comment .job,
  .negative .comment .job {
    display: block;
    margin-bottom: 5px;
  }

  .positive .comment .job {
    color: #2DB3D8;
  }

  .negative .comment .job {
    color: #530604;
  }
}


