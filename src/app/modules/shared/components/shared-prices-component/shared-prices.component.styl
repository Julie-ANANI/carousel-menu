/* ==========================================================================
   Infographie du rapport des professionnels
   ========================================================================== */

#infography {
  position: relative;
  padding: 70px;
  color: white;
  font-size: 15px;
  background-image: linear-gradient(-90deg, #032D45 1%, #145174 51%, #032D45 100%);
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizelegibility;
  -moz-osx-font-smoothing: grayscale;

  a {
    color: #FDD47B;
  }

  a:hover {
    color: #FDD47B;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  h1 {
    margin-top: 70px;
    margin-bottom: 100px;
    font-size: 50px;
    color: white;
  }

  h2 {
    background: rgba(0,0,0,0.7) url('/images/infographics/picto-earth.svg') left center no-repeat;
    border-radius: 500px;
    font-size: 21px;
    color: white;
    padding: 16px 16px 16px 70px;
    margin-top: 120px;
    margin-bottom: 40px;
    line-height: 24px;
    text-align: left;
    font-weight: normal;
  }

  .count {
    background: #FED57C;
    color: #51401A;
    border-radius: 12px;
    width: 20px;
    line-height: 19px;
    font-size: 11px;
    height: 20px;
    margin-right: 5px;
    display: inline-block;
  }

  .switch-with-text {
    position: absolute;
    right: 36px;
    top: 26px;
    text-align: right;
  }

  .list-detail-tag {

    ul li {
            display: block;
    background: #0D90AD;
    margin-bottom: 10px;
    padding: 5px;
    border-radius: 500px;
    text-align: center;
  }

  ul li:hover:after {
    content: '?';
    display: block;
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -15px;
    margin-right: 2px;
    height: 30px;
    width: 30px;
    line-height: 30px;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 15px;
    cursor: pointer;
    vertical-align: center;
  }

  ul li:nth-child(even) {
            background: rgba(255,255,255,0.17);
}

}

.cited {
  font-size: 28px;
  margin: 30px 0 10px 0;

  strong {
    font-size: 40px;
  }
}

input.cmn-toggle-round-flat:checked + label {
  background: #0B90C6;
}

input.cmn-toggle-round-flat + label {
  background-color: #f39200;
}

input.cmn-toggle-round-flat:checked + label:after {
  background-color: #0B90C6;
}

input.cmn-toggle-round-flat + label:after {
