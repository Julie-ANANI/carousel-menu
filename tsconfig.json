{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "server.ts",
    "e2e"
  ]
}
